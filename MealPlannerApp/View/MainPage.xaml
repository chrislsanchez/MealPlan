<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealPlannerApp.MainPage"
             xmlns:viewmodel="clr-namespace:MealPlannerApp.ViewModel" 
             x:DataType="viewmodel:MainViewModel">

    <Grid RowDefinitions=" 200, Auto, Auto, *"          
          Padding="10"
          RowSpacing="10">

        <Image Grid.ColumnSpan="2"               
               Source="meal_plan_logo.png"
               Aspect="AspectFit"               
               BackgroundColor="Transparent">
        </Image>

        <Button Text="New Recipe"                              
                Grid.Row="1">
            <Button.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding AddNewRecipeCommand}"/>
            </Button.GestureRecognizers>
        </Button>        

        <Button Text="New Grocery List"
                Grid.Row="2">
            <!--Command="{Binding NewGroceryListCommand}"-->
        </Button>      
        
        <!--Create a Tap Gesture recognizer-->


    </Grid>

</ContentPage>
